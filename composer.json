{
	"name": "mhujer/yaml-sort-checker",
	"type": "library",
	"description": "YAML sort checker checks if your YML files are properly sorted to prevent merge conflicts",
	"keywords": [
		"yaml",
		"sorter"
	],
	"homepage": "https://github.com/mhujer/yaml-sort-checked",
	"license": "MIT",
	"authors": [
		{
			"name": "Martin Hujer",
			"email": "mhujer@gmail.com",
			"homepage": "https://www.martinhujer.cz"
		}
	],
	"bin": [
		"bin/yaml-sort-checker"
	],
 "require": {
		"php": "~7.3 | ^8.0 | ^8.3",
		"symfony/console": "~3.4|~4.3|~5.0|~6.0",
		"symfony/yaml": "~3.4|~4.3|~5.0|~6.0"
	},
 "require-dev": {
		"php-parallel-lint/php-parallel-lint": "^1.3",
		"phpstan/phpstan": "^1.10",
		"phpunit/phpunit": "^9.6"
	},
	"autoload": {
		"psr-4": {
			"Mhujer\\YamlSortChecker\\": [
				"src"
			]
		},
		"classmap": [
			"src"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Mhujer\\YamlSortChecker\\": [
				"tests"
			]
		},
		"classmap": [
			"tests"
		]
	},
	"scripts": {
		"build": [
			"@phplint",
			"@phpcs",
			"@phpstan",
			"@test"
		],
		"phplint": "parallel-lint -j 10 --exclude vendor .",
		"phpstan": "@php vendor/bin/phpstan analyse bin src tests --level 7 --no-progress",
		"test": "phpunit"
	},
	"config": {
		"sort-packages": true
	}
}
